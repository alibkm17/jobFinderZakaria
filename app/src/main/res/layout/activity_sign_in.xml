<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Main.SignInActivity" android:gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="300dp">

        <TextView
                android:text="PhoneNumber"
                android:layout_width="200dp"
                android:layout_height="35dp" android:id="@+id/textView15"
                android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/editText"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.89"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                tools:layout_editor_absoluteY="245dp" android:id="@+id/editText"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:hint="password" android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>